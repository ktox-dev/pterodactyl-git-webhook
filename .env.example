# Git Webhook Configuration (Hybrid Approach)
#
# Use config.yaml for container/submodule configuration (recommended)
# Use this .env file for global settings and overrides

# Global Configuration
REPOS_DIR=/home/container/server-data
# CONFIG_FILE=config.yaml

# Flask Server
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=webhook.log

# External APIs
GITHUB_API_TIMEOUT=10

# Git User (used for commits)
GIT_USER_NAME=Git Webhook Bot
GIT_USER_EMAIL=webhook@example.com

# Advanced Settings
COMMIT_MESSAGE_TEMPLATE=Auto-commit by webhook: {timestamp}
MAX_CONCURRENT_CONTAINERS=5 # Maximum number of concurrent container operations
CONTAINER_TIMEOUT=300 # Timeout for container operations
HEALTH_CHECK_ENABLED=true # Enable health check endpoint

